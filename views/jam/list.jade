extends ../layout

block content
  .row
    .col-md-12

      .form-group.jam-search
        label Search for Jams
        input.form-control(id='jam-search-field' name='search', type='text', placeholder='Jam name')
      .form-group.jam-search-btn-group
        button.btn.btn-primary(data-name='jam-search') Search
        button.btn.spotify-btn(data-name='spotify') Spotify Search


  .row
    .col-md-12.jam-results(style="display:none")
      if (jams != null && jams.length != 0)
        h2 Found Jams
        ul.jam-list
          for jam in jams
            li.jam-list-item(id=jam._id)
              p(data-name="jam-list-item")
                =jam.title
      else
        h1 There are no jams :(((
  script(src="/list-jam.js")
  